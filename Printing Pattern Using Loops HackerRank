#include <math.h>
#include <stdlib.h>

int main() 
{

    int n;
    scanf("%d", &n);
  	// Complete the code to print the pattern.
      for(int i=1;i<n*2;i++){
    for(int j=1;j<2*n;j++){
        if((abs((n-i))+1)>(abs((n-j))+1))
            printf("%d ",(abs((n-i))+1));
        else{
            printf("%d ",(abs((n-j))+1));
            }
        }
    printf("\n");
    }
    return 0;
}
