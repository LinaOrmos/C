//In c programming language the Switch statement
//is a conditional statement used to select one 
//of several blocks of code to execute based 
//on the value of an expression
//Integral Type Char, short, int, long int, int
//But you can't start with float
//Case values must be constant expresions
//you can't use any variables
//unique case values, they shouldn't be duplicated
//use a break statement

#include <stdio.h>

int main()
{
    int a=1,b=2;
    switch(a+b){
        case 1: printf("One\n");
        break;
        case 2:printf("Two\n");
        break;
        case 3: printf("Three\n");
        break;
        default: printf("Another value different from One, Two, Three");
    }
}


#include <stdio.h>

int main()
{
    int a=1,b=2;
    switch(a*b){
        case 1: printf("One\n");
        break;
        case 2:printf("Two\n");
        break;
        case 3: printf("Three\n");
        break;
        default: printf("Another value different from One, Two, Three");
    }
}


#include <stdio.h>

int main()
{
    int a=1,b=2;
    switch(a-b){
        case 1: printf("One\n");
        break;
        case 2:printf("Two\n");
        break;
        case 3: printf("Three\n");
        break;
        default: printf("Another value different from One, Two, Three");
    }
}
